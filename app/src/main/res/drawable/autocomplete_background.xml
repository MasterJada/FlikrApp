<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <padding android:right="5dp" android:left="5dp" android:bottom="5dp" android:top="5dp"/>
        <corners android:radius="5dp" />
        <stroke android:width="1dp" android:color="#28ffffff" />
        <solid android:color="#5c000000"/>
    </shape>
</item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <padding android:right="5dp" android:left="5dp" android:bottom="5dp" android:top="5dp"/>
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#b1ffffff" />
            <solid android:color="#3c000000"/>
        </shape>
    </item>
</selector>